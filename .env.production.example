
# ==============================================================================
# ARQUIVO 2: .env.production.example (Raiz do Projeto)
# ==============================================================================
# Template para ambiente de PRODUÇÃO
# Copie para .env.production quando for fazer deploy

# ==============================================================================
# DATABASE - PRODUÇÃO
# ==============================================================================
# PostgreSQL em produção (obrigatório!)
DATABASE_URL=postgresql://usuario:senha@host-producao:5432/salao_db_prod

# Exemplos de providers:
# Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb
# Railway: postgresql://postgres:pass@containers-us-west-xxx.railway.app:7432/railway
# Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres

# ==============================================================================
# SECURITY & AUTH - PRODUÇÃO
# ==============================================================================
# ⚠️ CRÍTICO: GERE UMA NOVA CHAVE FORTE!
# Execute: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GERAR_NOVA_CHAVE_SUPER_FORTE_AQUI_64_CARACTERES_MINIMO
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 horas em produção

# ==============================================================================
# API CONFIGURATION - PRODUÇÃO
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_URL=https://api.seusalao.com

# CORS - URLs do frontend em produção
CORS_ORIGINS=https://seusalao.com,https://www.seusalao.com

# ==============================================================================
# FRONTEND - PRODUÇÃO
# ==============================================================================
APP_URL=https://seusalao.com
COMPANY_NAME=Salão de Beleza

# ==============================================================================
# EMAIL - PRODUÇÃO
# ==============================================================================
SENDGRID_API_KEY=SG.XXXXXXXXXXXXXXXXXXXXXXX
EMAIL_FROM=contato@seusalao.com

# ==============================================================================
# ENVIRONMENT - PRODUÇÃO
# ==============================================================================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# ==============================================================================
# MONITORING (Sentry) - PRODUÇÃO
# ==============================================================================
# Cadastre-se GRÁTIS em https://sentry.io
SENTRY_DSN=https://xxxxxxxxxxxxx@o123456.ingest.sentry.io/7891011

# ==============================================================================
# BACKUP CONFIGURATION - PRODUÇÃO
# ==============================================================================
BACKUP_ENABLED=True
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=salao-backups  # Se usar AWS S3

# ==============================================================================
# RATE LIMITING (Segurança extra)
# ==============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# LOGS
# ==============================================================================
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5